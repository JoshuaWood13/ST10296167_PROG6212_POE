@page
@model ST10296167_PROG6212_POE.Pages.IndexHRModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        h1 {
            font-size: 50px;
            font-family: 'Eras ITC',sans-serif;
            color: deeppink;
        }

        h2 {
            font-size: 40px;
            margin-top: 20px;
            font-family: 'Trebuchet MS',sans-serif;
        }

        body {
            text-align: center;
            background-color: blanchedalmond;
        }

        .inputBorder {
            display: flex;
            padding-left: 20px;
            padding-right: 20px;
            padding-top: 0px;
            padding-bottom: 0px;
            border: 2px solid darkgray;
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 1000px;
            height: 500px;
            margin: 0 auto;
        }

        .element {
            flex: 1; /* Equal width for each section */
            padding: 5px;
        }

        .divider {
            width: 2px;
            background-color: black;
            margin: 0 10px;
        }

        input {
            margin-top: 5px;
            margin-bottom: 10px;
            border-radius: 10px;
            height: 35px;
        }

        select {
            margin-top: 5px;
            margin-bottom: 10px;
            border-radius: 10px;
            height: 35px;
        }

        label {
            font-size: 25px;
        }

        .b1 {
            font-size:20px;
            background-color:deepskyblue;
            height: 50px;
            width: 200px;
            border-radius: 10px;
            font-weight: bolder;
        }

        .b2 {
            font-size: 20px;
            background-color: lawngreen;
            height: 50px;
            width: 200px;
            border-radius: 10px;
            font-weight: bolder;
        }
    </style>
</head>

<body>
    <h1>HR Dashboard</h1>

    <div class="inputBorder">
        <div class="element">
            <h2>Claim Processing</h2>

            <label>Lecturer ID:</label> <br />
            @* <input type="text" value="All"/> <br /> *@
            <select id="lecturerSelect" onchange="toggleLecturerInput()">
                <option value="All">All</option>
                <option value="Custom">Custom Lecturer ID</option>
            </select> <br />
            <input id="lecturerInput" type="text" value="" disabled placeholder="Enter Lecturer ID" /> <br />
            <label>Claim Month:</label> <br />
            <select>
                <option value="All">All</option>
                <option value="January">January</option>
                <option value="February">February</option>
                <option value="March">March</option>
                <option value="April">April</option>
                <option value="May">May</option>
                <option value="June">June</option>
                <option value="July">July</option>
                <option value="August">August</option>
                <option value="September">September</option>
                <option value="October">October</option>
                <option value="November">November</option>
                <option value="December">December</option>
            </select> <br />
            <label>Claim Value Range</label> <br />
            <select>
                <option value="0">All</option>
                <option value="1">Below R5000</option>
                <option value="2">R5000 - R20 000</option>
                <option value="3">Above R20 000</option>
            </select> <br /> <br />
            <button class="b1">Generate Report</button>
        </div>

        <div class="divider"></div>

        <div class="element">
            <h2>Manage Lecturer Data</h2>

            <label>Lecturer ID:</label> <br />
            <input type="text" id="lecturerID"/> <br /> <br />
            <button class="b2">Search</button>
        </div>
    </div>
</body>

<script>
    function toggleLecturerInput() {
        var lecturerSelect = document.getElementById('lecturerSelect');
        var lecturerInput = document.getElementById('lecturerInput');

        if (lecturerSelect.value === 'Custom') {
            lecturerInput.disabled = false;  // Enable input
        } else {
            lecturerInput.disabled = true;   // Disable input
        }
    }
</script>