@model ST10296167_PROG6212_POE.Models.Login;

<head>
    <style>
        h1 {
            font-size: 50px;
            margin-bottom: 20px;
            font-family: 'Eras ITC',sans-serif;
            color: deeppink;
        }

        h2 {
            font-size: 20px;
            margin-bottom: 20px;
        }

        body {
            text-align: center;
            background-color:blanchedalmond;
        }

        p {
            margin-bottom: 5px;
            font-family: 'Arial Rounded MT',sans-serif;
        }

        input {
            margin-top: 5px;
            margin-bottom: 10px;
            border-radius: 10px;
        }

        select {
            margin-top: 5px;
            margin-bottom: 10px;
            border-radius: 5px;
        }

        button {
            margin-top: 10px;
            font-size: 20px;
            width: 200px;
            border-radius: 5px;
            padding: 10px 10px;
            background-color: skyblue;
        }

        .inputBorder {
            display: inline-block;
            padding: 25px;
            border: 2px solid darkgray;
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 400px;
        }

        .inputBorder input, .inputBorder select {
            width: calc(100% - 100px);
            padding: 10px;
        }

        .text-danger {
            display: block;
            padding-bottom: 10px;
        }
    </style>
</head>

<body>
    <h1>Login</h1>
    <div class="inputBorder">
        <form action="LoginUser" method="post">

            @* <p>Select Account Type:</p>
            <select name="Account" required>
                <option value="Academic Manager">Academic Manager</option>
                <option value="Lecturer">Lecturer</option>
                <option value="Programme Coordinator">Programme Coordinator</option>
            </select> *@

            <p>Account ID:</p>
            <input asp-for="AccountID" />
            <span asp-validation-for="AccountID" class="text-danger"></span>

            <p>Password:</p>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit"><strong>Login</strong></button>
        </form>
    </div>
    <br /><br />
    @if (TempData["Error"] != null)
    {
        <div id="alert" class="alert alert-danger">
            @TempData["Error"]
        </div>
    }
</body>