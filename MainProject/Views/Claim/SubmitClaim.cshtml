@model ST10296167_PROG6212_POE.Models.Claims;

<head>
    <style>
        h1 {
            font-size: 50px;
            font-family:'Eras ITC',sans-serif;
            color:deeppink;
        }

        h2 {
            font-size: 20px;
            margin-bottom: 20px;
            font-family: 'Trebuchet MS',sans-serif;
        }

        body {
            text-align: center;
            background-color: blanchedalmond;
        }

        p {
            margin-bottom: 5px;
            font-family:'Arial Rounded MT',sans-serif;
        }

        input {
            margin-top: 5px;
            margin-bottom: 10px;
            border-radius: 10px;
        }

        select {
            margin-top: 5px;
            margin-bottom: 10px;
            border-radius: 10px;
            width: 250px;
            height: 40px;
        }

        textarea {
            margin-top: 5px;
            margin-bottom: 0px;
            border-radius: 10px;
        }

        button {
            margin-top: 0px;
            font-size: 20px;
            width: 300px;
            padding: 5px 10px;
            border-radius: 5px;
            background-color: skyblue;
        }

        .inputBorder{
            display: inline-block;
            padding: 25px;
            border: 2px solid darkgray;
            background-color: white;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 500px;
        }

        .inputBorder input asp-for, .inputBorder select asp-for, .inputBorder textarea asp-for {
            width: calc(100% - 50px); 
            padding: 10px;
        }

        .text-danger {
            display: block;
            padding-bottom: 10px;
        }
    </style>
</head>

<body>
    <h1>Submit Claim</h1>
    <h2>Please enter all relevant claim details</h2>

    <div class="inputBorder">
        <form asp-action="SubmitClaim" method="post">
            <p>Select Claim Month:</p>
            <select asp-for="ClaimMonth" >
                <option value="January">January</option>
                <option value="February">February</option>
                <option value="March">March</option>
                <option value="April">April</option>
                <option value="May">May</option>
                <option value="June">June</option>
                <option value="July">July</option>
                <option value="August">August</option>
                <option value="September">September</option>
                <option value="October">October</option>
                <option value="November">November</option>
                <option value="December">December</option>
            </select>
            <span asp-validation-for="ClaimMonth" class="text-danger"></span>

            <p>Hourly Rate:</p>
            <input asp-for="HourlyRate" type="number" step="0.1" placeholder="" />
            <span asp-validation-for="HourlyRate" class="text-danger"></span>

            <p>Hours Worked:</p>
            <input asp-for="HoursWorked" type="number" step="0.5" placeholder="" />
            <span asp-validation-for="HoursWorked" class="text-danger"></span>

            <p>Additional Notes:</p>
            @* <textarea name="Description" rows="5" cols="40" placeholder="Enter any notes relevant to your claim..." required></textarea> *@
            <textarea asp-for="Description" rows="5" cols="40" placeholder="Enter any notes relevant to your claim..."></textarea>

            <br /><br />
            <button type="submit" ><strong>Submit Claim</strong></button>
        </form>
    </div>
</body>
